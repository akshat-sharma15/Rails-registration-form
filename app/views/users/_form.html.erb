<div class="container">
  <h2>Registration Form</h2>
  <%= form_with model: @user do |form| %>

  <div class="form-group">
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name, class: 'form-control' %> 
    <% @user.errors.full_messages_for(:first_name).each do |message| %>
    <span class="error"><%= message %></span>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %><br>
    <%= form.text_field :last_name , class: 'form-control'%> 
    <% @user.errors.full_messages_for(:last_name).each do |message| %>
    <span class="error"><%= message %></span>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :email %><br>
    <%= form.text_area :email, class: 'form-control' %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
    <span class="error"><%= message %></span>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :mobile %><br>
    <%= form.text_area :mobile, class: 'form-control' %>
    <% @user.errors.full_messages_for(:mobile).each do |message| %>
    <span class="error"><%= message %></span>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :college %><br>
    <%= form.text_field :college, class: 'form-control' %> 
    <% @user.errors.full_messages_for(:college).each do |message| %>
    <span class="error"><%= message %></span>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :gender %><br>
    <%= form.text_field :gender, class: 'form-control' %> 
    <% @user.errors.full_messages_for(:gender).each do |message| %>
    <span class="error"><%= message %></span>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :dob %><br>
    <%= form.text_field :dob, class: 'form-control' %> 
    <% @user.errors.full_messages_for(:dob).each do |message| %>
    <span class="error"><%= message %></span>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :cousre %><br>
    <%= form.text_field :cousre, class: 'form-control' %> 
    <% @user.errors.full_messages_for(:course).each do |message| %>
    <span class="error"><%= message %></span>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.submit class: "submit-btn" %>
  </div>
    
  <% end %>
</div>
